@import "nib"
body,
html
    width 100%
    height 100%
.container-cms
    max-width 100%
    height 100%
.header
    width 100%
    height 50px
    background linear-gradient(to bottom,#3498db 0%,#2980b9 100%)
    line-height 50px
    margin-top 0
    border-top none

    .content-user
        font-weight bold
        color: #fff
        float right
        margin-right 40px
        a
            color #fff
        i
            margin 0 20px 0 65px

.content-content
    background-color: #2c3e50
    height 100%
    .menu-left-cms
        position: absolute
        height: 100%
        width 220px
        ul
            padding 0
        li
            border-bottom 1px solid #868b98
            a 
                padding 10px
                display: block
                border-left 4px solid transparent
                color: #fff
                font-weight bold
                i
                    padding-right 20px
                    position relative
                    top 2px
            &.active,
            &:hover
                a
                    border-left-color #3498db
                    background-color #1a1d22


    .content-logo
        padding 10px
        box-shadow inset 0 0 6px rgba(0,0,0,0.3)
        background-color: #FFF
        img
            max-width 100%
            margin:0 auto
    .content-cms
        position: relative
        height 100%
        background-color: #e7ebee
        margin-left 220px
        padding 10px
        padding-left 40px;
        .title-page
            color #3498db
        .infographic-box
            background-color #fff 
            padding 20px
            position relative
            left 17px
            width 30%
            box-shadow 2px 2px 2px #ccc
            border-radius 4px
            float left
            margin-left 2%
            margin-top 26px
            &:first-child
                margin-left 0
                left 0
            i
                font-size 2.4em
                display block
                float left 
                margin-right 15px
                width 60px
                height 60px
                line-height 60px
                text-align center
                border-radius 50%
                color #fff
            .headline
                display: block
                font-size 1.2em
                font-weight 300
                text-align right
            .value
                display block
                font-size 2.1em
                text-align right
                color #2c3e50


        .red-bg
            background linear-gradient(to bottom,#e74c3c 0%,#c0392b 100%)!important
            background-color #e74c3c !important
        .blue-bg
            background linear-gradient(to bottom,#3498db 0%,#2980b9 100%)!important
            background-color #3498db!important
        .green-bg
            background linear-gradient(to bottom,#2ecc71 0%,#27ae60 100%)!important
            background-color #2ecc71!important

        .redactor,
        .content-tab
            max-width 921px
            margin-top 17px
            min-height 300px
            background-color #fff
            box-shadow 2px 2px 2px #ccc
            border-radius 5px 5px 0 0;

.redactor,
#list
    padding 10px

.content-infographic
    max-width 960px

.target
    opacity 0
    display none
    transition all 1s
:target
    opacity 1
    display block

.list-tab
    background-color #D0D8DE
    border-radius 5px 5px 0 0;
    .tab
        display: inline-block
        min-width 101px
        height 100%
        padding 12px
        text-align center
        font-weight bold
        cursor: pointer
        border-radius 5px 5px 0 0;
        &.active
            background-color #fff

form.page
    input[type="text"]
        width 60%
        float left
        margin-right 11px
    .col-md-6
        padding-top 5px
        padding-bottom 5px
        .fa
            margin 3px;
        label
            display block

.form
    width 404px
    height 369px
    background-color rgba(250,250,250,0.3)
    margin 0 auto
    .content-form
        padding 10px
    input
        width 100%
        padding 10px
        margin 6px 0px 4px 0px
        border 1px solid transparent
        &:focus
            outline 0
            border 1px solid #3498DB
    &.form_login
        height auto